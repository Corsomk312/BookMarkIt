<div class="users-index">
  <h3>All Users</h3>
  <ul>
    <% @users.each do |user| %>
      <li class="follow-space"><%= link_to "#{user.username.capitalize}", user %>
        <% if user.followers.count == 1 %>
          (<%= user.followers.count %> follower)
        <% else %>
          (<%= user.followers.count %> followers)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>