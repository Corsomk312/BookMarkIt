<div class="container " id="padding-top">
	<div class="row">
			<h2>Create a folder</h2>
		<div class="col-md-4">


				<div class="form-group">
				<%= form_for @list, html: {id: "create-list", class: "form-inline"}, class: "form-inline" do |f| %>
				  <%= f.text_field :name, placeholder: "Folder name", class: 'form-control' %>
				  <%= f.submit "Create", class: "btn btn-default" %>
				<% end %>
				</div>

			</div>
	</div>
</div>
